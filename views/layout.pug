doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='/javascripts/jquery.min.js')
    script(src='/javascripts/layout.js')
  body
    block content

    div#login_popup.q-window
      div.q-window-block(style="width:400px;height:220px;margin:-110px 0 0 -200px")
        div.q-window-header
          | Вход
          a#login_popup_close(style="position: relative;left: 300px;") X
        div.q-window-body.q-form
          div.q-form-data
            label(for="inpLogin") Логин
            input#inpLogin(type="text")
          div.q-form-data
            label(for="inpPassword") Пароль
            input#inpPassword(type="password")
        div.q-buttons
          a#submit_login Войти

    div#order_popup.q-window
      div.q-window-block(style="width:400px;height:260px;margin:-130px 0 0 -200px")
        div.q-window-header
          | Создание заказа
          a#order_popup_close(style="position: relative;left: 200px;") X
        div.q-window-body.q-form
          div.q-form-data
            label(for="inpOrderLabel") Название
            input#inpOrderLabel(type="text")
          div.q-form-data
            label(for="inpOrderClient") Клиент
            select#inpOrderClient
              if clients && clients.length
                each client in clients
                  option(value=client.id)= client.label
              else
                option(value="") Нет клиентов
          div.q-form-data
            label(for="inpOrderAmount") Сумма
            input#inpOrderAmount(type="number" step="0.01")
        div.q-buttons
          a#submit_order Создать
          a#cancel_order Отмена
