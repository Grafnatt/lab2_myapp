extends ../layout

block content
    
    button.back-button(type="button" onclick="window.location.href='/'") Назад
    
    h1= title
    
    table
        thead
            tr 
                th id
                th Заказ
                th Тип платежа
                th Сумма платежа
        tbody
            each item in payments
                tr
                    td= item.id
                    td= item.order_label
                    td= item.payment_type_label
                    td= item.amount

    if payments.length === 0
        p Нет платежей